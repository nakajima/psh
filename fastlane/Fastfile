default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :test do
    run_tests(
      project: "psh.xcodeproj",
      scheme: "psh",
      device: "iPhone 17",
      clean: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do |options|
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "psh.xcodeproj"
    )

    # Load API key info for build authentication
    api_key_json = JSON.parse(File.read("api_key.json"))
    auth_key_path = File.expand_path("AuthKey.p8")

    xcargs = "-allowProvisioningUpdates"
    xcargs += " -authenticationKeyID #{api_key_json['key_id']}"
    xcargs += " -authenticationKeyIssuerID #{api_key_json['issuer_id']}"
    xcargs += " -authenticationKeyPath '#{auth_key_path}'"

    build_app(
      project: "psh.xcodeproj",
      scheme: "psh",
      configuration: "Release",
      destination: "generic/platform=iOS",
      clean: true,
      export_method: "app-store",
      xcargs: xcargs
    )

    changelog = options[:changelog] || "Bug fixes and improvements"

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key_path: "fastlane/api_key.json",
      changelog: changelog
    )
  end
end
