default_platform(:ios)

# Parse Config.xcconfig to get project settings
def load_xcconfig
  config = {}
  File.readlines("../Config.xcconfig").each do |line|
    next if line.strip.start_with?("//") || line.strip.empty?
    if match = line.match(/^(\w+)\s*=\s*(.+)$/)
      config[match[1].strip] = match[2].strip
    end
  end
  config
end

platform :ios do
  desc "Run tests"
  lane :test do
    run_tests(
      project: "psh.xcodeproj",
      scheme: "psh",
      device: "iPhone 17",
      clean: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do |options|
    config = load_xcconfig
    bundle_id = config["PSH_BUNDLE_IDENTIFIER"]
    provisioning_profile = config["PSH_PROVISIONING_PROFILE"]

    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "psh.xcodeproj"
    )

    build_app(
      project: "psh.xcodeproj",
      scheme: "psh",
      configuration: "Release",
      destination: "generic/platform=iOS",
      clean: true,
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          bundle_id => provisioning_profile
        }
      }
    )

    changelog = options[:changelog] || "Bug fixes and improvements"

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key_path: "fastlane/api_key.json",
      changelog: changelog
    )
  end
end
